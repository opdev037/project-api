{
  "name": "Laravel Sail Backend",
  "dockerComposeFile": "../compose.yaml",
  "service": "laravel.test",
  "workspaceFolder": "/var/www/html",
  "forwardPorts": [8000, 3306],
  "postCreateCommand": "composer install --optimize-autoloader",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",   // PHP 補全神器
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "eamodio.gitlens"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      }
    }
  },
  "remoteUser": "sail"
}